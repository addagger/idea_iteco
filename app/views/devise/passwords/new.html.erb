<section class="bg-8 bg-center bg-cover  section-fxd">
    <div class="bg-filter">
        <div class="hv-center">
            <div class="sign-up">
                <div class="sign-up-hr hidden-xs"></div>
                <h1 class="sign-up-title">Забыли?</h1>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
											<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { :class => "icon", :method => :post }) do |f| %>
												<div class="form-group ">
												    <div class="control">
															  <%= f.email_field :email, placeholder: "Email", :class => "form-control", autofocus: true %>
												        <i class="fa fa-envelope"></i>
												    </div>
												</div>
												<%= button_tag :type => "submit", :class => "btn btn-success" do %>
												  <i class="fa fa-check"></i>Отправить инструкцию</button>
												<% end %>
											<% end %>
                    </div>
										<%= render "devise/shared/omniauthable" %>
                </div>
            </div>
						<%= render "devise/shared/links" %>
        </div>
    </div>
</section>
<!--===/END    MAIN WRAP     ===-->