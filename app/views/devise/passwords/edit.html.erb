<section class="bg-8 bg-center bg-cover  section-fxd">
    <div class="bg-filter">
        <div class="hv-center">
            <div class="sign-up">
                <div class="sign-up-hr hidden-xs"></div>
                <h1 class="sign-up-title">Новый пароль</h1>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
											<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { :class => "icon", :method => :put }) do |f| %>
												<%= f.hidden_field :reset_password_token %>
												<div class="form-group ">
												    <div class="control">
															  <%= f.password_field :password, :class => "form-control", autofocus: true, placeholder: "Ваш новый пароль", autocomplete: "off" %>
												        <i class="fa fa-envelope"></i>
												    </div>
												</div>
												<div class="form-group ">
												    <div class="control">
															  <%= f.password_field :password_confirmation, :class => "form-control", autofocus: true, placeholder: "Подтверждение", autocomplete: "off" %>
												        <i class="fa fa-envelope"></i>
												    </div>
												</div>
												<%= button_tag :type => "submit", :class => "btn btn-success" do %>
												  <i class="fa fa-check"></i>Поменять пароль</button>
												<% end %>
											<% end %>
                    </div>
                </div>
            </div>
						<%= render "devise/shared/links" %>
        </div>
    </div>
</section>
<!--===/END    MAIN WRAP     ===-->
