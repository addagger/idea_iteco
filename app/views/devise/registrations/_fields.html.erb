<div class="form-group ">
    <div class="control">
			  <%= f.text_field :email, :class => "form-control", :placeholder => "Email", :autofocus => "true", :required => true %>
        <i class="fa fa-envelope"></i>
    </div>
</div>
<div class="form-group ">
    <div class="control">
			  <%= f.password_field :password, :class => "form-control", :placeholder => "Пароль #{"#{@minimum_password_length} символов минимум" if @validatable}", :autocomplete => "off", :required => true %>
        <i class="fa fa-lock"></i>
    </div>
</div>
<div class="form-group ">
    <div class="control">
				<%= f.password_field :password_confirmation, :class => "form-control", :placeholder => ("Подтверждение" if @validatable), :autocomplete => "off", :required => true %>
        <i class="fa fa-lock"></i>
    </div>
</div>
<%= button_tag :type => "submit", :class => "btn btn-success" do %>
  <i class="fa fa-check"></i>Регистрация</button>
<% end %>
<div class="space visible-sm visible-xs"></div>