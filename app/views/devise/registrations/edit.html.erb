<!--===    MAIN WRAP     ===-->
<section class="bg-8 bg-center bg-cover  section-fxd">
    <div class="bg-filter">
        <div class="hv-center">
            <div class="sign-up">
                <div class="sign-up-hr hidden-xs"></div>
                <h1 class="sign-up-title">Изменить учетную запись</h1>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
											<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "icon", :method => :put }) do |f| %>
												<%= render "devise/registrations/fields", :f => f %>
											<% end %>
                    </div>
                    <%= render "devise/shared/omniauthable" %>
                </div>
            </div>
					  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
					    <div>Ожидается подтверждение для <%= resource.unconfirmed_email %></div>
					  <% end %>
						<h3>Удалить эккаунт</h3>

						<p><%= button_to "Удалить эккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete %></p>

						<%= link_to "Назад", :back %>
						
        </div>
    </div>
</section>
<!--===/END    MAIN WRAP     ===-->