<!--===    MAIN WRAP     ===-->
<section class="bg-8 bg-center bg-cover  section-fxd">
    <div class="bg-filter">
        <div class="hv-center">
            <div class="sign-up">
                <div class="sign-up-hr hidden-xs"></div>
                <h1 class="sign-up-title">Регистрация</h1>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
												<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "icon"}) do |f| %>
                            <div class="form-group ">
                                <div class="control">
                                    <input type="email" name="user[email]" class="form-control" placeholder="Email" autofocus="true" required>
                                    <i class="fa fa-envelope"></i>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="control">
                                    <input type="password" name="user[password]" class="form-control" placeholder="Пароль <%= "#{@minimum_password_length} символов минимум" if @validatable %>" autocomplete="off" required>
                                    <i class="fa fa-lock"></i>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="control">
                                    <input type="password" name="user[password_confirmation]" class="form-control" placeholder="Подтверждение" autocomplete="off" required>
                                    <i class="fa fa-lock"></i>
                                </div>
                            </div>
														<%= button_tag :type => "submit", :class => "btn btn-success" do %>
														  <i class="fa fa-check"></i>Регистрация</button>
														<% end %>
                            <div class="space visible-sm visible-xs"></div>
                        <% end %>
                    </div>
                    <%= render "devise/shared/omniauthable" %>
                </div>
            </div>
						<%= render "devise/shared/links" %>
						
        </div>
    </div>
</section>
<!--===/END    MAIN WRAP     ===-->

<%= script_for :ready_script, :javascript_tag => false do %>
  $(".selectpicker").selectpicker({
    'selectedText': 'cat'
  });
  $('.datepicker').datepicker({
    autoclose: true,
    format: 'yyyy-mm-dd',
    forceParse: false,
    language: "<%= I18n.locale %>"
  });
<% end %>